<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.customers.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.customers.LogoutHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowItemsHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.items.ShowItemsHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.customers.RegisterHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowMyItemsHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.items.ShowMyItemsHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.items.AddItemHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BidHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.bids.BidHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.items.BuyHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.items.SearchHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxHandler</servlet-name>
        <servlet-class>com.epam.springauction.servlets.ajax.AjaxHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/serv/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutHandler</servlet-name>
        <url-pattern>/serv/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowItemsHandler</servlet-name>
        <url-pattern>/serv/showitems</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterHandler</servlet-name>
        <url-pattern>/serv/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowMyItemsHandler</servlet-name>
        <url-pattern>/serv/showmyitems</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemHandler</servlet-name>
        <url-pattern>/serv/additem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BidHandler</servlet-name>
        <url-pattern>/serv/bid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyHandler</servlet-name>
        <url-pattern>/serv/buy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchHandler</servlet-name>
        <url-pattern>/serv/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxHandler</servlet-name>
        <url-pattern>/serv/ajax</url-pattern>
    </servlet-mapping>
    <!-- DispatcherServlet -->
    <servlet>
        <servlet-name>advanceSearchHandler</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                /WEB-INF/applicationContext.xml
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>advanceSearchHandler</servlet-name>
        <url-pattern>/spring/*</url-pattern>
    </servlet-mapping>
    <!-- session congfigurations -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.sql.SQLException</exception-type>
        <location>/pages/errorpages/sqlexcep.jsp</location>
    </error-page>
    <!-- ссылка на бд -->
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/marketDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
